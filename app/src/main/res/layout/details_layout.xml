<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/detailsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:background="#000000"
        android:text="Message goes here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:text="Time goes here"
        app:layout_constraintStart_toStartOf="@+id/detailsMessage"
        app:layout_constraintTop_toBottomOf="@+id/detailsMessage" />

    <TextView
        android:id="@+id/detailsSendReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:text="Send receive goes here"
        app:layout_constraintStart_toStartOf="@+id/detailsTime"
        app:layout_constraintTop_toBottomOf="@+id/detailsTime" />

    <TextView
        android:id="@+id/detailsDatabaseID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:text="Database ID goes here"
        app:layout_constraintStart_toStartOf="@+id/detailsSendReceive"
        app:layout_constraintTop_toBottomOf="@+id/detailsSendReceive" />
</androidx.constraintlayout.widget.ConstraintLayout>